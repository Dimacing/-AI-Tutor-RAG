# LLM settings
LLM_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
GEMINI_API_KEY
GEMINI_MODEL=gemini-2.0-flash-exp
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=1000
GIGACHAT_AUTH_KEY=
GIGACHAT_ACCESS_TOKEN=
GIGACHAT_MODEL=GigaChat
GIGACHAT_BASE_URL=https://gigachat.devices.sberbank.ru
GIGACHAT_VERIFY_SSL=false

DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_MODELS=sentence-transformers/all-MiniLM-L6-v2,sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2,sentence-transformers/all-mpnet-base-v2

# Paths
INDEX_DIR=data/index
LOCAL_INDEX_DIR=data/index_local
WEB_INDEX_DIR=data/index_web
UPLOADS_DIR=data/uploads
SOURCES_FILE=data/sources.json

# Retrieval
TOP_K=4
MIN_SCORE=0.2

# Crawling
CRAWL_MAX_PAGES=30
CRAWL_ALLOWLIST=/docs/

# Logging
LOG_LEVEL=INFO
LOG_USER_TEXT=false

# UI
BACKEND_URL=http://localhost:8000
